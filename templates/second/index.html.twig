{% extends 'base.html.twig' %}

{% block title %}Hello SecondController!{% endblock %}

{% block body %}
        <div class="Contact" id="contact">
            <h2 class="center"> Me Contacter </h2>
            <section> 
                <div class="form_container"> 
                    {{ form_start(form) }}
                    <div class="form-group"> 
                        {{ form_row(form.username) }}
                    </div>
                    <div class="form-group"> 
                        {{ form_row(form.mail) }}
                    </div>
                    <div class="form-group"> 
                        {{ form_row(form.password) }}
                    </div>
                    <div class="form-group"> 
                        {{ form_row(form.gender) }}
                    </div>
                    <div class="form-group"> 
                        {{ form_row(form.picture) }}
                    </div>
                    <button class="btn_form btn btn-primary" type="submit"> Valider </button>
                        {{ form_end(form) }}
                    </button>
                </div>
            </section>
        </div>
{% endblock %}
